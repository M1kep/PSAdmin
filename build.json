{
    "version": "0.2.0",
    
    "configurations": [
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Interactive Session",
            "cwd": ""
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "label": "PowerShell",
            "name": "PowerShell Launch Current File",
            "script": ". ${file}",
            "args": [],
            "cwd": "${file}"
        },
        {
            "name": "Attach to PowerShell Functions",
            "type": "PowerShell",
            "request": "attach",
            "customPipeName": "AzureFunctionsPSWorker",
            "runspaceId": 1,
            "preLaunchTask": "func: host start"
        }
    ]
}